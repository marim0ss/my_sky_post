<% provide(:title, "ユーザー情報の詳細") %>

<div class="container-fluid center-content">
  <div class="card" style="width: 30rem;">
    <h3 class="card-header ac2"><i class="fas fa-search-plus">ユーザー情報の詳細</i></h3>
    <div class="card-body ac2">
      <p>
        <!--  image_tag @user.image_url(:thumb) if @user.image.present? -->
      </p>
      <p>名前：<%= @user.name %></p>
      <p>誕生日：<%= @user.birth_date %></p>
      <p>年齢：<%= @user.age %></p>
      <p>出身：<%= @user.birthplace %></p>
      <p>How are you?：
        <% @user.how_are_you %>
          <% case @user.how_are_you %>
            <% when "1" then %>
            <%= image_tag '/laugh-squint-regular.svg', :size => '30x20' %>
            <% when "2" then %>
            <%= image_tag '/grin-regular.svg', :size => '30x20' %>
            <% when "3" then %>
            <%= image_tag '/meh-blank-regular.svg', :size => '30x20' %>
            <% when "4" then %>
            <%= image_tag '/frown-regular.svg', :size => '30x20' %>
            <% else %>
            <%= @user.how_are_you %>
          <% end %>
      </p>


      <p>
        <%= link_to '新規投稿する', '#', class: "btn btn-ac1 btn-lg w-arrange-btn" %>
        <%= link_to 'あなたの投稿一覧', '#', class: "btn btn-info btn-lg w-arrange-btn"  %>
        <%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-outline-info btn-lg w-arrange-btn" %>
        <%= link_to 'User一覧へ戻る', users_path, class: "btn btn-outline-secondary btn-lg w-arrange-btn" %>
      </p>
    </div>
  </div>
</div>
